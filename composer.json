{
    "name": "generic/phpunit-runner",
    "description": "A generic, standalone configuration to install and run PHPUnit on any PHP project.",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">= 8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "ext-xdebug": "*"
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}